// program to test shiznet out

const isEven = function (x) {
  if (x % 2 === 0) {
    return true;
  } else {
    return false;
  }
};

const testIsEven = function () {
  if (isEven(2)) {
    console.log("2 is even");
  } else {
    console.log("isEven(2) failed test");
  }
  if (isEven(3) === false) {
    console.log("3 is odd");
  } else {
    console.log("isEven(3) failed test");
  }
  if (isEven(0)) {
    console.log("0 is even");
  } else {
    console.log("isEven(0) failed test");
  }
  if (isEven(-1) === false) {
    console.log("-1 is odd");
  } else {
    console.log("isEven(-1) failed test");
  }
};

console.log(testIsEven());

